@using AltFuture.CoinMarketCapAPI.Models.KeyInfo;
@model KeyInfo

@{
    ViewBag.Title = "KeyInfo Details";
}


<div class="container">
    <h1 class="mt-4">@ViewBag.Title</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Plan</h3>
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th>Credit Limit Daily</th>
                        <td>@Model.Plan.CreditLimitDaily</td>
                    </tr>
                    <tr>
                        <th>Credit Limit Daily Reset</th>
                        <td>@Model.Plan.CreditLimitDailyReset</td>
                    </tr>
                    <tr>
                        <th>Credit Limit Daily Reset Timestamp</th>
                        <td>@Model.Plan.CreditLimitDailyResetTimestamp</td>
                    </tr>
                    <tr>
                        <th>Credit Limit Monthly</th>
                        <td>@Model.Plan.CreditLimitmonthly</td>
                    </tr>
                    <tr>
                        <th>Credit Limit Monthly Reset</th>
                        <td>@Model.Plan.CreditLimitMonthlyReset</td>
                    </tr>
                    <tr>
                        <th>Credit Limit Monthly Reset Timestamp</th>
                        <td>@Model.Plan.CreditLimitMonthlyResetTimestamp</td>
                    </tr>
                    <tr>
                        <th>Rate Limit Minute</th>
                        <td>@Model.Plan.RateLimitMinute</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Usage</h3>
            <h4>Current Minute</h4>
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th>Requests Made</th>
                        <td>@Model.Usage.CurrentMinute.RequestsMade</td>
                    </tr>
                    <tr>
                        <th>Requests Left</th>
                        <td>@Model.Usage.CurrentMinute.RequestsLeft</td>
                    </tr>
                </tbody>
            </table>
            <h4>Current Day</h4>
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th>Credits Used</th>
                        <td>@Model.Usage.CurrentDay.CreditsUsed</td>
                    </tr>
                    <tr>
                        <th>Credits Left</th>
                        <td>@Model.Usage.CurrentDay.CreditsLeft</td>
                    </tr>
                </tbody>
            </table>
            <h4>Current Month</h4>
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th>Credits Used</th>
                        <td>@Model.Usage.CurrentMonth.CreditsUsed</td>
                    </tr>
                    <tr>
                        <th>Credits Left</th>
                        <td>@Model.Usage.CurrentMonth.CreditsLeft</td>
                    </tr>
                </tbody>
            </table>

    </div>
    </div>
</div>