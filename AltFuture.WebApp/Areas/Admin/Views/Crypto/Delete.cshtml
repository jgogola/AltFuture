@model Crypto

@{
    ViewData["Title"] = "Delete Crypto";
}


<div class="container">

    <section class="section-page-header">
        <h1 class="text-center">Delete Crypto</h1>
        <p class="lead text-light text-center">Are you sure you want to delete this crypto asset from the system?</p>
        <a class="close-page" asp-controller="Crypto" asp-action="Index" title="Return to crypto assets list."><i class="fa-solid fa-rectangle-xmark"></i></a>
    </section>

    <section class="section-container">
        <dl class="row text-light mt-5">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CryptoName)
            </dt>
            <dd class="col-sm-10 fs-5">
                @Model?.CryptoName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TickerSymbol)
            </dt>
            <dd class="col-sm-10">
                @Model?.TickerSymbol
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CryptoIcon)
            </dt>
            <dd class="col-sm-10">
                <div style="width: 40px">@Html.Raw(Model?.CryptoIcon)</div>
            </dd>
            <dt class="col-sm-2 pt-5">
                <a asp-action="Index" class="btn btn-info btn-sm">
                    <i class="fa-solid fa-right-to-bracket fa-rotate-180"></i>
                    Back to List
                </a>
            </dt>
            <dd class="col-sm-10 pt-5">
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="CryptoId" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                </form>
            </dd>
        </dl>
    </section>
</div>
