@model Crypto

@{
    ViewData["Title"] = "Crypto Details";
}



<div class="container">
    <h1 class="text-center">Crypto Details</h1>

    <section class="section-container">
        <dl class="row text-light mt-5">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CryptoName)
            </dt>
            <dd class="col-sm-10">
                @Model?.CryptoName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TickerSymbol)
            </dt>
            <dd class="col-sm-10">
                @Model?.TickerSymbol
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CryptoIcon)
            </dt>
            <dd class="col-sm-10">
                <div style="width: 40px">@Html.Raw(Model?.CryptoIcon)</div>
            </dd>

            <dt class="col-sm-2 mt-5">
                <a asp-action="Index" class="btn btn-info btn-sm me-1">
                    <i class="fa-solid fa-right-to-bracket fa-rotate-180"></i>
                    Back to List
                </a>
            </dt>
            <dd class="col-sm-10 mt-5">

                <a asp-action="Edit" asp-route-id="@Model?.CryptoId" class="btn btn-success btn-sm" title="Edit Details">
                    <i class="fa-solid fa-pencil" style="color: #ffffff;"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.CryptoId" class="btn btn-danger btn-sm" title="Delete" role="button">
                    <i class="fa-solid fa-trash" style="color: #ffffff;"></i>
                </a>
            </dd>
        </dl>


        <div class="mt-5">


        </div>
    </section>
</div>