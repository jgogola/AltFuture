@model Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container">
    <h1 class="text-center">Delete Transaction</h1>
   
    <p class="lead text-light text-center">Are you sure you want to delete this transaction history record from your portfolio?</p>

    <section class="section-container">
        <dl class="row text-light mt-5">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Crypto)
            </dt>
            <dd class="col-sm-10">
                @Model.Crypto.CryptoName
                <div style="display: inline-block; width: 32px;">@Html.Raw(Model.Crypto.CryptoIcon)</div>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionReferenceNum)
            </dt>
            <dd class="col-sm-10">
                @Model.TransactionReferenceNum
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Model.Price.ToString("C")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Model.Quantity.ToString("N6")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionTotal)
            </dt>
            <dd class="col-sm-10">
                @Model.TransactionTotal.ToString("C")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fee)
            </dt>
            <dd class="col-sm-10">
                @Model.Fee.ToString("C")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionDate)
            </dt>
            <dd class="col-sm-10">
                @Model.TransactionDate
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FromExchange)
            </dt>
            <dd class="col-sm-10">
                @Model.FromExchange.ExchangeName
            </dd>
            @{
                if (Model.ToExchange?.ExchangeName != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ToExchange)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.ToExchange?.ExchangeName ?? "")
                    </dd>
                }
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedDate
            </dd>
            <dt class="col-sm-2 pt-5">
                <a asp-action="Index" class="btn btn-info btn-sm">
                    <i class="fa-solid fa-right-to-bracket fa-rotate-180"></i>
                    Back to List
                </a>
            </dt>
            <dd class="col-sm-10 pt-5">
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="TransactionId" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                </form>
            </dd>
        </dl>
    </section>
</div>
