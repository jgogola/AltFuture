@model TransactionDetail

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container">

    <section class="section-page-header">
        <h1 class="text-center">Delete Transaction</h1>
        <p class="lead text-danger text-center"><em>Are you sure you want to delete this transaction history record from your portfolio?</em></p>
        <a class="close-page" asp-controller="Transactions" asp-action="Index" title="Return to transaction history."><i class="fa-solid fa-rectangle-xmark"></i></a>
    </section>

    <section class="section-container">
        <dl class="row text-light mt-5">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FromExchangeName)
            </dt>
            <dd class="col-sm-10">
                @Model.FromExchangeName
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExchangeTransactionTypeName)
            </dt>
            <dd class="col-sm-10">
                @Model.ExchangeTransactionTypeName
            </dd>

            @{
                if (Model.TransactionReferenceNum != 0)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TransactionReferenceNum)
                    </dt>
                    <dd class="col-sm-10">
                        @Model.TransactionReferenceNum
                    </dd>
                }
            }

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CryptoName)
            </dt>
            <dd class="col-sm-10">
                @Model.CryptoName
                <div style="display: inline-block; width: 32px;">@Html.Raw(Model.CryptoIcon)</div>
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InvestmentTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InvestmentTotal)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fee)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionTotal)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionDate)
            </dt>
            <dd class="col-sm-10">
                @Model.TransactionDate
            </dd>

            @{
                if (Model.ToExchangeName is not null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ToExchangeName)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.ToExchangeName ?? "")
                    </dd>
                }
            }

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedDate
            </dd>
            <dt class="col-sm-2 pt-5">
                <a asp-action="Index" class="btn btn-info btn-sm">
                    <i class="fa-solid fa-right-to-bracket fa-rotate-180"></i>
                    Back to List
                </a>
            </dt>
            <dd class="col-sm-10 pt-5">
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="TransactionId" />
                    <input type="submit" value="Confirm Delete" class="btn btn-danger btn-sm " />
                </form>
            </dd>
        </dl>
    </section>
</div>
